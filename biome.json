{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "root": true,
  "files": {
    "includes": [
      "./app/**/*",
      "./components/**/*",
      "!**/node_modules",
      "!**/node_modules",
      "!**/dist",
      "!**/.next"
    ],
    "ignoreUnknown": false
  },
  "formatter": {
    "bracketSameLine": true,
    "enabled": true,
    "bracketSpacing": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
